<%= content_for(:title, t('.title')) %>
<div class="container d-flex flex-column align-items-center justify-content-center" style="min-height: 85vh;">
  <div class="w-50">
    <h1 class="text-center"><%= t('.title') %></h1>

    <div class="mb-3">
      <strong><%= User.human_attribute_name(:name) %>:</strong>
      <%= @user.name %>
    </div>

    <div class="mb-3">
      <strong><%= User.human_attribute_name(:email) %>:</strong>
      <%= @user.email %>
    </div>

    <div class="mb-3">
      <strong><%= User.human_attribute_name(:role) %>:</strong>
      <%= @user.role.titleize %>
    </div>

    <%= link_to t('.edit'), edit_admin_user_path(@user), class: 'btn btn-primary' %>
    <%= link_to t('.index'), admin_users_path, class: 'btn btn-secondary' %>
  </div>
</div>
