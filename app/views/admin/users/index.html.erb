<%= content_for(:title, t('.title')) %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 text-center">
      <h1><%= t('.title') %></h1>
      <%= search_form_for @q, url: admin_users_path, class: "search-form mb-4" do |f| %>
        <%= f.label :name_cont, "名前" %>
        <%= f.search_field :name_cont %>

        <%= f.label :email_cont, "メール" %>
        <%= f.search_field :email_cont %>

        <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>名前</th>
              <th>メール</th>
              <th>操作</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.email %></td>
                <td>
                  <%= link_to t('.show'), admin_user_path(user), class: 'btn btn-primary' %>
                  <%= link_to t('.edit'), edit_admin_user_path(user), class: 'btn btn-warning' %>
                  <%= link_to t('.destroy'), admin_user_path(user), data: {turbo_method: :delete, turbo_confirm: t('.confirm')}, class: 'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
