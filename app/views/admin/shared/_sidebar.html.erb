<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;">
  <hr>
  <ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
      <%= link_to admin_users_path, class: "nav-link active", "aria-current": "page" do %>
        <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
        ユーザー一覧
      <% end %>

    </li>
  </ul>
  <hr>
  <div class="dropdown">
    <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
      <%= image_tag current_user.profile.avatar_url, size: '40x40', alt: 'mdo', class: 'rounded-circle' %>
      <strong class = 'text-light'><%= current_user.name %></strong>
    </a>
    <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
      <li><%= link_to (t 'defaults.logout'), admin_logout_path, class: 'dropdown-item', data: { turbo_method: :delete } %></li>
    </ul>
  </div>
</div>