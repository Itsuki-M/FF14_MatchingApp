<%= content_for(:title, t('.title')) %>
<div class="modal modal-signin position-static d-block bg-secondary py-5" tabindex="-1" role="dialog" id="modalSignin">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-5 shadow">
      <div class="modal-header p-5 pb-4 border-bottom-0">
        <h2 class="fw-bold mb-0"><%= t '.title' %></h2>
      </div>

      <div class="modal-body p-5 pt-0">
        <%= form_with url: login_path, local: true do |f| %>
          <div class="form-group form-floating mb-3">
            <%= f.text_field :email, class: 'form-control rounded-4', id: 'floatingInput', placeholder: 'name@example.com' %>
            <%= f.label :email, User.human_attribute_name(:email), for: 'floatingInput' %>
          </div>
          <div class="form-group form-floating mb-3">
            <%= f.password_field :password, class: 'form-control rounded-4', id: 'floatingInput', placeholder: 'name@example.com' %>
            <%= f.label :password, User.human_attribute_name(:password), for: 'floatingInput' %>
          </div>
          <%= f.submit (t 'defaults.login'), class: 'w-100 mb-2 btn btn-lg rounded-4 btn-primary mb-3' %>
        <% end %>
        <div class="text-center d-flex flex-column align-items-center">
          <%= link_to (t '.register'), new_user_path, class: 'mb-2' %> <!-- mb-2は下マージンを適用 -->
          <%= link_to (t '.password_forgot'), "#", class: 'mb-2' %> <!-- 同上 -->
        </div>
      </div>
    </div>
  </div>
</div>