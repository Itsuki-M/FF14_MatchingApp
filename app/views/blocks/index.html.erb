<%= content_for(:title, t('.title')) %>
<div class = 'container'>
  <div class = 'row justify-content-center'>
    <div class = 'col-md-6 text-center'>
      <h1><%= t('.title') %></h1>
      <% @blocked_users.each do |user| %>
        <div class="card mb-2">
          <div class="card-body d-flex align-items-center justify-content-between">
            <h5 class="card-title mb-0"><%= user.name %></h5>
            <%= link_to t('.unblock'), block_path(current_user.blocker_blocks.find_by(blocked_user_id: user.id)), class: 'btn btn-warning', data: {turbo_method: :delete, turbo_confirm: t('.confirm')} %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
